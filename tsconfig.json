{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": ".",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "node_modules/@types",
      "src/types",
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
